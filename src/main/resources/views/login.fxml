<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.LoginController">
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="300.0" prefWidth="400.0" styleClass="login-form">
         <children>
            <Label styleClass="header" text="La Plateforme Tracker">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label text="Gestion Étudiants" textFill="#7f8c8d">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <VBox spacing="15.0">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Nom d'utilisateur :" />
                        <TextField fx:id="usernameField" promptText="Entrez votre nom d'utilisateur" />
                     </children>
                  </VBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Mot de passe :" />
                        <PasswordField fx:id="passwordField" promptText="Entrez votre mot de passe" />
                     </children>
                  </VBox>
                  <Label fx:id="errorLabel" styleClass="alert-error" text="" textFill="RED" visible="false" wrapText="true" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="loginButton" defaultButton="true" onAction="#handleLogin" styleClass="button-success" text="Se connecter" />
                        <Button fx:id="cancelButton" cancelButton="true" onAction="#handleCancel" text="Annuler" />
                     </children>
                  </HBox>
                  <!-- Lien vers l'inscription -->
                  <HBox alignment="CENTER">
                     <children>
                        <Hyperlink fx:id="registerLink" text="S'inscrire" onAction="#handleShowRegister" />
                     </children>
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER">
         <children>
            <Label text="Utilisateur par défaut: admin / admin123" textFill="#95a5a6">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
