<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.StudentFormController">
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header-section">
         <children>
            <Label fx:id="titleLabel" styleClass="page-title" text="Nouvel Étudiant" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="cancelBtn" onAction="#handleCancel" styleClass="secondary-button" text="Annuler" />
            <Button fx:id="saveBtn" onAction="#handleSave" styleClass="primary-button" text="Enregistrer" />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </HBox>
      
      <!-- Form Content -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="20.0">
               <children>
                  <!-- Student Information -->
                  <VBox spacing="15.0" styleClass="form-section">
                     <children>
                        <Label styleClass="section-title" text="Informations étudiant" />
                        
                        <GridPane hgap="15.0" vgap="10.0">
                           <columnConstraints>
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                           </columnConstraints>
                           <children>
                              <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                 <children>
                                    <Label text="Prénom *" />
                                    <TextField fx:id="firstNameField" promptText="Prénom de l'étudiant" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                 <children>
                                    <Label text="Nom *" />
                                    <TextField fx:id="lastNameField" promptText="Nom de famille" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                 <children>
                                    <Label text="Âge *" />
                                    <Spinner fx:id="ageSpinner" prefWidth="100.0" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <children>
                                    <Label text="Note" />
                                    <ComboBox fx:id="gradeCombo" maxWidth="1.7976931348623157E308" promptText="Sélectionner une note" />
                                 </children>
                              </VBox>
                           </children>
                        </GridPane>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</VBox>
