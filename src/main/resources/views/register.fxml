<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.RegisterController">
   <center>
      <VBox alignment="CENTER" spacing="10.0" prefWidth="400.0" styleClass="login-form">
         <children>
            <Label styleClass="header" text="Inscription">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <VBox spacing="10.0">
               <children>
                  <TextField fx:id="usernameField" promptText="Nom d'utilisateur" />
                  <PasswordField fx:id="passwordField" promptText="Mot de passe" />
                  <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" />
                  <TextField fx:id="firstNameField" promptText="PrÃ©nom" />
                  <TextField fx:id="lastNameField" promptText="Nom" />
                  <TextField fx:id="emailField" promptText="Email" />
                  <Label fx:id="errorLabel" styleClass="alert-error" textFill="RED" visible="false" wrapText="true" />
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="registerButton" defaultButton="true" text="S'inscrire" onAction="#handleRegister" />
                        <Button fx:id="cancelButton" cancelButton="true" text="Annuler" onAction="#handleCancel" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
